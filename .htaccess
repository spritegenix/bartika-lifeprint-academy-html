# Enable the rewrite engine
RewriteEngine On

# Set the base for rewrites
RewriteBase /

# Don't apply rules to existing files or directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Handle blog routes
RewriteRule ^blog/([^/]+)/?$ blog/$1.html [L]

# Handle courses routes
RewriteRule ^courses/([^/]+)/?$ courses/$1.html [L]

# Redirect index.html to root
RewriteRule ^index\.html$ / [R=301,L]

# Handle 404 errors
ErrorDocument 404 /_not-found.html

# Improve caching for static assets
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Cache HTML for 1 day
  ExpiresByType text/html "access plus 1 day"
  
  # Cache CSS, JavaScript, and media files for 1 month
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/svg+xml "access plus 1 month"
  
  # Cache fonts for 1 year
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
</IfModule>

# Enable GZIP compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript text/javascript application/json image/svg+xml
</IfModule>

# Set security headers
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-XSS-Protection "1; mode=block"
  Header set X-Frame-Options "SAMEORIGIN"
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>